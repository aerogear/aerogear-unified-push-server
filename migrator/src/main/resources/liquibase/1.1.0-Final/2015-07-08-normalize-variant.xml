<databaseChangeLog
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">
    <changeSet id="1" author="qmx" dbms="mysql">
        <preConditions onFail="MARK_RAN">
            <tableExists tableName="Variant"/>
            <not>
                <tableExists tableName="variant"/>
            </not>
        </preConditions>
        <renameTable oldTableName="Variant" newTableName="variant"/>
    </changeSet>
    <changeSet id="2" author="qmx">
        <preConditions onFail="MARK_RAN">
            <columnExists tableName="variant" columnName="variants_id"/>
        </preConditions>
        <renameColumn tableName="variant" oldColumnName="variants_id" newColumnName="push_application_id" columnDataType="VARCHAR(255)"/>
    </changeSet>
    <changeSet id="3" author="qmx" dbms="mysql">
        <preConditions onFail="MARK_RAN">
            <columnExists tableName="variant" columnName="variantID"/>
        </preConditions>
        <renameColumn tableName="variant" oldColumnName="variantID" newColumnName="api_key" columnDataType="VARCHAR(255)"/>
    </changeSet>
    <changeSet id="4" author="qmx" dbms="postgresql">
        <preConditions onFail="MARK_RAN">
            <columnExists tableName="variant" columnName="variantid"/>
        </preConditions>
        <renameColumn tableName="variant" oldColumnName="variantid" newColumnName="api_key" columnDataType="VARCHAR(255)"/>
    </changeSet>
</databaseChangeLog>